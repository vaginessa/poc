<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hawk.framework.dic.mapper.ColumnMapper">

	<sql id="columns">
				object_id AS "objectId" ,
		table_object_id AS "tableObjectId" ,
		data_definition_object_id AS "dataDefinitionObjectId" ,
		column_order AS "columnOrder" 
	</sql>
	
	<sql id="where">
		<trim prefix="WHERE" prefixOverrides="AND|OR">		 
			<if test="objectId != null"> AND object_id = #{objectId}  </if>
			<if test="tableObjectId != null"> AND table_object_id = #{tableObjectId}  </if>
			<if test="dataDefinitionObjectId != null"> AND data_definition_object_id = #{dataDefinitionObjectId}  </if>
			<if test="columnOrder != null"> AND column_order = #{columnOrder}  </if>
		</trim>	
	</sql>
	
	<sql id="where_old">
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			AND object_id = #{old_objectId}
			AND table_object_id = #{old_tableObjectId}
			AND data_definition_object_id = #{old_dataDefinitionObjectId}
			AND column_order = #{old_columnOrder}
		</trim>
	</sql>
	
	<sql id="update">
		<set>
			object_id = #{objectId},
			table_object_id = #{tableObjectId},
			data_definition_object_id = #{dataDefinitionObjectId},
			column_order = #{columnOrder},
		</set>
	</sql>
	
	<sql id="updateWithoutNull">
		<set>
			<if test="objectId != null">object_id = #{objectId},</if>
			<if test="tableObjectId != null">table_object_id = #{tableObjectId},</if>
			<if test="dataDefinitionObjectId != null">data_definition_object_id = #{dataDefinitionObjectId},</if>
			<if test="columnOrder != null">column_order = #{columnOrder},</if>
		</set>
	</sql>
	
	<sql id="pkwhere">
		<trim prefix="WHERE" prefixOverrides="AND">
			AND object_id = #{objectId}
		</trim>
	</sql>
	
	<select id="load"  resultType="ColumnDomain">
		SELECT 
		<include refid="columns" />
		FROM t_dic_column
		<include refid="pkwhere" />		
	</select>
	
	<select id="loadDynamic" parameterType="hashmap" resultType="ColumnDomain">
		SELECT 		
		<include refid="columns" />
		FROM t_dic_column
		<include refid="where" />
		<if test="_orderby != null">ORDER BY ${_orderby}</if>
	</select>

	<select id="count"  parameterType="hashmap" resultType="integer">
		SELECT count(1) 
		FROM t_dic_column
		<include refid="where" />
	</select>
	
	<select id="countByPK"  resultType="integer">
		SELECT count(1) 
		FROM t_dic_column
		<include refid="pkwhere" />		
	</select>
	
	<insert id="insert"  parameterType="ColumnDomain">
		INSERT INTO t_dic_column (			
				object_id,				
				table_object_id,				
				data_definition_object_id,				
				column_order				
		)		
		VALUES (	
			#{objectId},
			#{tableObjectId},
			#{dataDefinitionObjectId},
			#{columnOrder}
		) 
	</insert>
	
	<delete id="delete" >
		DELETE FROM t_dic_column
		<include refid="pkwhere" />	
	</delete>
	
	<delete id="deleteDynamic" parameterType="hashmap">
		DELETE FROM t_dic_column
		<include refid="where" />
	</delete>

	<update id="update" parameterType="ColumnDomain">
		UPDATE t_dic_column	
		<include refid="update" />
		<include refid="pkwhere" />	
	</update>
	
	<update id="updateWithoutNull" parameterType="ColumnDomain">
		UPDATE t_dic_column
		<include refid="updateWithoutNull"/>
		<include refid="pkwhere" />	
	</update>
	
	<update id="updateDynamic" parameterType="hashmap">
		UPDATE t_dic_column	
		<include refid="update" />
		<include refid="where_old" />
	</update>
	
	<select id="loadDynamicPaging" parameterType="hashmap" resultType="ColumnDomain">
		SELECT 		
		<include refid="columns" />
		FROM t_dic_column
		<include refid="where" />
		<if test="_orderby != null">ORDER BY ${_orderby}</if>
		<if test="_offset != null">LIMIT #{_offset},#{_limit}</if>	
	</select>
</mapper>