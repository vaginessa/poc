<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hawk.framework.dic.mapper.PairMapper">

	<sql id="columns">
				data_definition_object_id AS "dataDefinitionObjectId" ,
		pair_key AS "pairKey" ,
		pair_value AS "pairValue" 
	</sql>
	
	<sql id="where">
		<trim prefix="WHERE" prefixOverrides="AND|OR">		 
			<if test="dataDefinitionObjectId != null"> AND data_definition_object_id = #{dataDefinitionObjectId}  </if>
			<if test="pairKey != null"> AND pair_key = #{pairKey}  </if>
			<if test="pairValue != null"> AND pair_value = #{pairValue}  </if>
		</trim>	
	</sql>
	
	<sql id="where_old">
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			AND data_definition_object_id = #{old_dataDefinitionObjectId}
			AND pair_key = #{old_pairKey}
			AND pair_value = #{old_pairValue}
		</trim>
	</sql>
	
	<sql id="update">
		<set>
			data_definition_object_id = #{dataDefinitionObjectId},
			pair_key = #{pairKey},
			pair_value = #{pairValue},
		</set>
	</sql>
	
	<sql id="updateWithoutNull">
		<set>
			<if test="dataDefinitionObjectId != null">data_definition_object_id = #{dataDefinitionObjectId},</if>
			<if test="pairKey != null">pair_key = #{pairKey},</if>
			<if test="pairValue != null">pair_value = #{pairValue},</if>
		</set>
	</sql>
	
	<sql id="pkwhere">
		<trim prefix="WHERE" prefixOverrides="AND">
			AND data_definition_object_id = #{dataDefinitionObjectId}
		</trim>
	</sql>
	
	<select id="load"  resultType="PairDomain">
		SELECT 
		<include refid="columns" />
		FROM t_dic_pair
		<include refid="pkwhere" />		
	</select>
	
	<select id="loadDynamic" parameterType="hashmap" resultType="PairDomain">
		SELECT 		
		<include refid="columns" />
		FROM t_dic_pair
		<include refid="where" />
		<if test="_orderby != null">ORDER BY ${_orderby}</if>
	</select>

	<select id="count"  parameterType="hashmap" resultType="integer">
		SELECT count(1) 
		FROM t_dic_pair
		<include refid="where" />
	</select>
	
	<select id="countByPK"  resultType="integer">
		SELECT count(1) 
		FROM t_dic_pair
		<include refid="pkwhere" />		
	</select>
	
	<insert id="insert"  parameterType="PairDomain">
		INSERT INTO t_dic_pair (			
				data_definition_object_id,				
				pair_key,				
				pair_value				
		)		
		VALUES (	
			#{dataDefinitionObjectId},
			#{pairKey},
			#{pairValue}
		) 
	</insert>
	
	<delete id="delete" >
		DELETE FROM t_dic_pair
		<include refid="pkwhere" />	
	</delete>
	
	<delete id="deleteDynamic" parameterType="hashmap">
		DELETE FROM t_dic_pair
		<include refid="where" />
	</delete>

	<update id="update" parameterType="PairDomain">
		UPDATE t_dic_pair	
		<include refid="update" />
		<include refid="pkwhere" />	
	</update>
	
	<update id="updateWithoutNull" parameterType="PairDomain">
		UPDATE t_dic_pair
		<include refid="updateWithoutNull"/>
		<include refid="pkwhere" />	
	</update>
	
	<update id="updateDynamic" parameterType="hashmap">
		UPDATE t_dic_pair	
		<include refid="update" />
		<include refid="where_old" />
	</update>
	
	<select id="loadDynamicPaging" parameterType="hashmap" resultType="PairDomain">
		SELECT 		
		<include refid="columns" />
		FROM t_dic_pair
		<include refid="where" />
		<if test="_orderby != null">ORDER BY ${_orderby}</if>
		<if test="_offset != null">LIMIT #{_offset},#{_limit}</if>	
	</select>
</mapper>